<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog -->
    <style name="DialogWindowTitle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DialogWindowTitle.DeviceDefault">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.DeviceDefault</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="BtnDialog">
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24dp</item>
        <item name="android:background">@drawable/selector_btn_dialog</item>
    </style>
</resources>